let initial = timeit(); 

define numDigits(n) {
    let count = 0;
    let increment = 1; 

    while n >= increment {
        count = count + 1; 
        increment = increment * 10; 
    } 

    return count; 

}

print numDigits(10); #2
print numDigits(1); #1 
print numDigits(3290320); #7 

print "Time: " + (timeit() - initial);